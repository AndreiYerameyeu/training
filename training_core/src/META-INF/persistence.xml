<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="training_core">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.musclemen.model.training.Exercise</class>
		<class>org.musclemen.model.usermgmt.Participant</class>
		<class>org.musclemen.model.training.Set</class>
		<class>org.musclemen.model.training.Workout</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost/training" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="secret" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="1800" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />	
			<property name="hibernate.hbm2ddl.auto" value="create-update" />	
		</properties>
	</persistence-unit>	
	<persistence-unit name="training_core_oracle">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.musclemen.model.training.Exercise</class>
		<class>org.musclemen.model.usermgmt.Participant</class>
		<class>org.musclemen.model.training.Set</class>
		<class>org.musclemen.model.training.Workout</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.connection.url" value="jdbc:oracle:thin:@EPMW1224:1521:xe" />
			<property name="hibernate.connection.username" value="training" />
			<property name="hibernate.connection.password" value="pswd" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="1800" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />			
		</properties>
	</persistence-unit>
</persistence>
